	"main": "index.js",
	"scripts": {
		"dev": "tsnd --respawn --clear src/app.ts",
		"build": "rimraf ./dist && tsc",
		"start": "npm run build && node dist/app.js",
		"lint": "npx eslint src",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "npx prettier src --check",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"docker:test": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
		"prisma:migrate:prod": "prisma migrate deploy",
		"prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
		"prisma:test": "npm run docker:test && npm run prisma:migrate:test",
		"test": "npm run prisma:test && jest",
		"test:watch": "npm run prisma:test && jest --watch",
		"test:coverage": "npm run prisma:test && jest --coverage"
	},
